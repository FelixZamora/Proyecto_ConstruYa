<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Terminos_condiciones">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-181dp"
        android:src="@tools:sample/avatars"
        app:srcCompat="@drawable/superior_img" />


    <TextView
        android:id="@+id/tvCerrarTermino"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="65dp"
        android:text="Cerrar" />

    <ImageButton
        android:id="@+id/irLogin"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-16dp"
        android:backgroundTint="@color/blanco"
        app:srcCompat="@android:drawable/ic_notification_clear_all" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Termino y condiciones"
        android:textSize="32sp" />


    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:text="Termino y condiciones\n
para tener en cuantas nustro termonos \n
y condicines es necesaria aclarar que todo\n
lo que diga sera usado en su contra\n
asi mismo es importante aclara que toda la \n
culapa sera asumida por usted."

        android:inputType="textMultiLine" />




    <Button
        android:id="@+id/btnirRegistro"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ACEPTO" />


    <ImageView
        android:id="@+id/imageVi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-15dp"
        app:srcCompat="@drawable/piepagina" />

</LinearLayout>


