<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Olvide_pss">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@tools:sample/avatars"
        android:layout_marginLeft="-180dp"

        app:srcCompat="@drawable/superior_img" />


    <TextView
        android:id="@+id/tvCerrar"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="65dp"
        android:text="Cerrar" />

    <ImageButton
        android:id="@+id/irLogin"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-16dp"
        android:backgroundTint="@color/blanco"
        app:srcCompat="@android:drawable/ic_notification_clear_all" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Recuperar Contraseña"
        android:textSize="32sp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvUser" />


    <EditText
        android:id="@+id/etNombresApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />



    <TextView
        android:id="@+id/tvPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvPass" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/tvPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Contraseña" />

    <EditText
        android:id="@+id/etPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />



    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Enviar" />


    <ImageView
        android:id="@+id/imageVi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-15dp"
        app:srcCompat="@drawable/piepagina" />

</LinearLayout>


